baseurl = "https://raahii.github.io/"
theme = "hugo-lithium-theme"
languageCode = "ja-JP"
title = "1ミリもわからん"
googleAnalytics = "UA-86522604-4"
disqusShortname = "raahii"
enableEmoji = true
disableKinds = ["taxonomy", "taxonomyTerm", "section", "404"]

# syntax highlight
pygmentsCodefences = true
pygmentsCodefencesGuessSyntax = true
pygmentsStyle = "github"

# related article
[related]
  threshold = 80
  includeNewer = true
  toLower = true

  [[related.indices]]
    name = "tags"
    weight = 100

  [[related.indices]]
    name = "categories"
    weight = 20

  [[related.indices]]
    name = "date"
    weight = 10

[permalinks]
    post = "/:year/:month/:day/:filename/"
    page = "/:title/"

[[menu.main]]
    name = "About"
    url = "/about/"
    pre = "internal"

[[menu.main]]
    name = "GitHub"
    url = "https://github.com/raahii"
    pre = "external"

[[menu.main]]
    name = "Twitter"
    url = "https://twitter.com/raahiiy"
    pre = "external"

[params]
    mainSections = ["post"]

    # path to the favicon, under "static"
    favicon = "favicon.ico"

    # Auto math equation rendering with KaTeX
    math = true

    [params.logo]
    url = "bird.svg"
    width = 45
    height = 45
    alt = "Logo"

    [params.icon]
    url = "favicon.ico"

[blackfriday]
  hrefTargetBlank = true
